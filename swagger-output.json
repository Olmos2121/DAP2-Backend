{
  "swagger": "2.0",
  "info": {
    "title": "Movie Reviews API",
    "description": "API para reseñas de películas",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Reviews",
      "description": "Operaciones sobre reseñas"
    },
    {
      "name": "Users",
      "description": "Gestión de usuarios"
    },
    {
      "name": "Movies",
      "description": "Gestión de películas"
    },
    {
      "name": "Health",
      "description": "Salud del servicio"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Healthcheck",
        "description": "Liveness del servicio",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "definitions": {
    "Review": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "movie_id": {
          "type": "number",
          "example": 456
        },
        "user_id": {
          "type": "number",
          "example": 789
        },
        "rating": {
          "type": "number",
          "example": 8.5
        },
        "has_spoilers": {
          "type": "boolean",
          "example": false
        },
        "body": {
          "type": "string",
          "example": "Excelente..."
        },
        "status": {
          "type": "string",
          "example": "pending"
        },
        "moderated_at": {
          "type": "string",
          "example": "2025-01-01T00:00:00Z"
        },
        "moderation_label": {
          "type": "string",
          "example": "approved"
        },
        "moderation_score": {
          "type": "number",
          "example": 0.92
        },
        "moderation_reason": {
          "type": "string",
          "example": "Lenguaje apropiado; sin insultos."
        },
        "moderation_source": {
          "type": "string",
          "example": "ai"
        },
        "created_at": {
          "type": "string",
          "example": "2025-01-01T00:00:00Z"
        },
        "updated_at": {
          "type": "string",
          "example": "2025-01-01T00:00:00Z"
        }
      }
    },
    "ReviewCreateInput": {
      "type": "object",
      "properties": {
        "movie_id": {
          "type": "number",
          "example": 456
        },
        "user_id": {
          "type": "number",
          "example": 789
        },
        "rating": {
          "type": "number",
          "example": 8.5
        },
        "has_spoilers": {
          "type": "boolean",
          "example": false
        },
        "body": {
          "type": "string",
          "example": "Texto..."
        }
      }
    }
  }
}